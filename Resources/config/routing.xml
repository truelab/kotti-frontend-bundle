<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="truelab_kotti_frontend_context" path="{nodePath}" methods="GET">
        <default key="_controller">TruelabKottiFrontendBundle:Context:get</default>
        <requirement key="nodePath">.+</requirement>
    </route>

    <route id="truelab_kotti_frontend_context_home" path="/" methods="GET"> <!-- FIXME -->
        <default key="_controller">TruelabKottiFrontendBundle:Context:home</default>
        <default key="nodePath">''</default>
    </route>
</routes>
