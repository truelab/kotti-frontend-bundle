<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{{ context.title }}{% endblock %}</title>
    <meta lang="{{ context.language }}">

    {% block stylesheets %}
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                min-height: 2000px;
                padding-top: 70px;
            }

            nav#nav-children {
                display: block;
                height: 100%;
                padding: 0 12px;
            }

            nav#nav-children ul {
                list-style:none;
            }

            nav#nav-children > ul {
                margin: 0;
                padding: 0;
            }
        </style>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body>
    {% block body %}

        {% block navigation %}{% endblock %}

        {% block main_section %}
            <div id="container" class="container">

                {% block breadcrumbs %}
                    <ol class="breadcrumb">
                    {% for breadcrumb in kotti_breadcrumbs() %}
                        <li><a href="{{ kotti_path(breadcrumb) }}">{{ breadcrumb.title }}</a></li>
                    {% endfor %}
                        <li class="active">{{ context.title }}</li>
                    </ol>
                {% endblock %}

                <aside class="col-xs-3">
                    {% block aside %}
                        <nav id="nav-children">
                            <ul>
                                {% if context.getInNavigationChildren|length > 0  %}
                                    {% block nav_children %}
                                        {% include 'TruelabKottiFrontendBundle:Block:nav_children_link.html.twig'
                                            with { 'links': context.getInNavigationChildren } only
                                        %}
                                    {% endblock %}
                                {% else %}
                                    <li>
                                        <a href="javascript:window.history.back()"> << {% trans %}back{% endtrans %}</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    {% endblock %}
                </aside>

                <section id="content" class="col-xs-9">
                    {% block content %}{% endblock %}
                </section>

            </div>
        {% endblock %}

        <footer>
            {% block footer %}{% endblock %}
        </footer>
    {% endblock %}

    {% block javascripts %}{% endblock %}
</body>

</html>
